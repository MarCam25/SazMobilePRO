<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AltaDeProducto">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="1000dp"
        android:background="#f4f4f3"

        android:orientation="vertical">


        <Button
            android:id="@+id/btnBarCode"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textStyle="bold"
            android:textSize="20dp"

            android:text="SCANEAR"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn_buscar"
            android:layout_marginTop="5dp"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="#004d73" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#f4f4f3"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:text="Estilo"

                android:textColor="#3f3f40"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120dp"
                android:text="Color"
                android:textColor="#3f3f40"
                android:textSize="20dp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



            <EditText
                android:id="@+id/sp2"
                android:layout_width="185dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp"
                android:background="#e2e2de"
                android:inputType="textCapCharacters"
                android:hint="Etilo"
                android:textColor="#3f3f40"
                android:textSize="25dp"


                />

            <Spinner
                android:id="@+id/sp"
                style="@style/spinner_style"
                android:layout_width="205dp"

                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:clickable="true" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f4f4f3"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Acabado"
                android:textColor="#3f3f40"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="110dp"

                android:text="Marca"
                android:textColor="#3f3f40"
                android:textSize="20dp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f4f4f3"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/sp3"
                style="@style/spinner_style"
                android:layout_width="180dp"
                android:layout_height="wrap_content" />


            <Spinner
                android:id="@+id/sp4"
                style="@style/spinner_style"
                android:layout_width="205dp"

                android:layout_height="wrap_content"></Spinner>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f4f4f3"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Corrida"
                android:textColor="#3f3f40"
                android:textSize="20dp" />
            <Spinner
                android:id="@+id/sp5"
                style="@style/spinner_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></Spinner>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:textStyle="bold"
                android:textSize="25dp"
                android:gravity="center"
                android:textColor="#3f3f40"
                android:text="Ubicación actual"
                android:layout_marginTop="10dp"
                android:background="#fbfbfc" />


            <TextView
                android:id="@+id/txtUbica"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:textStyle="bold"
                android:textSize="25dp"
                android:gravity="center"
                android:textColor="#3f3f40"
                android:text="- - - - - - - - - - - - -"
                android:layout_marginTop="10dp"
                android:background="#fbfbfc" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:textStyle="bold"
                android:textSize="25dp"
                android:gravity="center"
                android:textColor="#3f3f40"
                android:text="Selecciona la Zona "
                android:layout_marginTop="10dp"
                android:background="#fbfbfc" />

            <Spinner
                android:id="@+id/spZonaP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/spinner_style"
                android:layout_weight="1" />


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginTop="10dp"
            android:background="#004d73"
            />
         <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             android:text="Código de barras "
             android:gravity="center"
             android:textSize="25dp"
             android:textColor="#000000"
             android:textStyle="bold"
             />
        <TextView
            android:id="@+id/idBarco"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="#000000"
            android:gravity="center"
            android:text="- - - - - - - - - - - - -"
            android:textStyle="bold"
            android:textSize="20dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#004d73"
            android:orientation="vertical"
            >





            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

            </LinearLayout>





        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_gravity="center"
                android:background="#004d73" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="0dp"
            android:gravity="center">


            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                android:layout_gravity="center">




                <Button
                    android:id="@+id/btnFinalizar"
                    android:layout_width="150dp"
                    android:layout_marginTop="10dp"
                    android:layout_height="50dp"
                    android:text="Guardar"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:background="@drawable/btn_buscar"
                    />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:textSize="25dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>


    </ScrollView>

</android.support.constraint.ConstraintLayout>