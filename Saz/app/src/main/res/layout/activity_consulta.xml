<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Consulta"
    android:background="#f4f4f3"

    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:background="#f4f4f3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="#f4f4f3"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:text="Estilo"

                android:textColor="#3f3f40"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120dp"
                android:text="Color"
                android:textColor="#3f3f40"
                android:textSize="20dp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



            <EditText
                android:id="@+id/sp2"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp"
                android:background="#e2e2de"
                android:inputType="textCapCharacters"
                android:hint="Etilo"
                android:textColor="#3f3f40"
                android:textSize="25dp"


                />

            <Spinner
                android:id="@+id/sp"
                style="@style/spinner_style"
                android:layout_width="205dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:clickable="true" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f4f4f3"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Acabado"
                android:textColor="#3f3f40"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="110dp"

                android:text="Marca"
                android:textColor="#3f3f40"
                android:textSize="20dp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f4f4f3"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/sp3"
                style="@style/spinner_style"
                android:layout_width="180dp"
                android:layout_height="wrap_content" />


            <Spinner
                android:id="@+id/sp4"
                style="@style/spinner_style"
                android:layout_width="205dp"

                android:layout_height="wrap_content"></Spinner>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Corrida"
                android:textColor="#3f3f40"
                android:textSize="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/sp5"
                style="@style/spinner_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Selecciona un punto"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="25dp"/>

            <Spinner
                android:id="@+id/punto"
                style="@style/spinner_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                ></Spinner>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_marginTop="7dp"
            android:background="#004d73"/>





        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnDetalle"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Imagen del producto"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/btn_buscar"
                android:textColor="#ffff"
                android:layout_marginTop="5dp"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView

                android:textColor="#000000"
                android:textSize="17dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="25dp"
                android:text="Unidades pedidas:"
                android:textStyle="bold"
                />
            <TextView
            android:id="@+id/unidadesTXT"
            android:textColor="#000000"
            android:textSize="17dp"

            android:layout_marginLeft="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0"
            android:textStyle="bold"
            />
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#000000"
                android:textSize="17dp"
                android:layout_marginLeft="25dp"
                android:text="Importe total:"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/importeTXT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="17dp"
                android:layout_marginLeft="25dp"
                android:layout_weight="1"
                android:textColor="#000000"
                android:textStyle="bold" />
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="0dp"
        android:background="#f4f4f3"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Existencias"
            android:layout_marginLeft="10dp"
            android:textColor="#000000"
            android:textSize="18dp"
            android:textStyle="bold" />


        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="precio"
            android:layout_marginLeft="20dp"
            android:textColor="#000000"
            android:textSize="18dp"
            android:textStyle="bold" />
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Descuento"
            android:layout_marginLeft="30dp"
            android:textColor="#000000"
            android:textSize="18dp"
            android:textStyle="bold" />
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Total"
            android:layout_marginLeft="30dp"
            android:textColor="#000000"
            android:textSize="18dp"
            android:textStyle="bold" />

    </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="40dp"
            android:orientation="horizontal">


            <TextView
android:id="@+id/existenciasTXT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="0"
                android:layout_marginLeft="30dp"
                android:textColor="#ff0000"
                android:textSize="16dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/precioTXT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="0.0"
                android:layout_marginLeft="60dp"
                android:textColor="#000000"
                android:textSize="16dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/descuentoTXT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="0.0"
                android:layout_marginLeft="45dp"
                android:textColor="#000000"
                android:textSize="16dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/totalTXT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="0.0"
                android:layout_marginLeft="50dp"
                android:textColor="#000000"
                android:textSize="16dp"
                android:textStyle="bold" />



        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/btnMas"
                android:textColor="#ffff"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/btn_buscar"
                android:layout_marginLeft="50dp"
                android:text="+"/>
            <TextView
                android:id="@+id/cantidadTXT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="0"
                android:background="#ffffff"
                android:layout_marginLeft="7dp"
                android:textColor="#ff0000"
                android:textSize="20dp"
                android:textStyle="bold" />
            <Button
                android:id="@+id/btnMenos"
                android:layout_width="60dp"
                android:layout_marginLeft="7dp"
                android:textColor="#ffff"
                android:background="@drawable/btn_buscar"
                android:layout_height="60dp"
                android:text="-"/>
            <Button
                android:id="@+id/btnAgregar"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginLeft="12dp"
                android:background="@drawable/btn_buscar"
                android:textColor="#ffff"
                android:text="GUARDAR" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:background="#004d73" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                android:layout_gravity="center">




            </LinearLayout>
            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                android:layout_gravity="center">




                <Button
                    android:id="@+id/btnFinalizar"
                    android:layout_width="250dp"
                    android:layout_marginTop="10dp"
                    android:layout_height="50dp"
                    android:text="Cancelar"
                    android:background="@drawable/btn_buscar"
                    android:textColor="#ffff"
                    />
            </LinearLayout>
        </LinearLayout>





    </LinearLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>