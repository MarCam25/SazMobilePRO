<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f3"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#f4f4f3"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Estilo: "
                    android:textColor="#3f3f40"
                    android:textSize="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/idEstilo"
                    android:layout_width="wrap_content"
                    android:textColor="#3f3f40"
                    android:layout_height="wrap_content"
                    android:text="GBOX"
                    android:textSize="18dp"

                    android:layout_marginTop="1dp"
                    android:layout_marginLeft="15dp"
                    android:textStyle="bold"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Punto: "
                        android:textColor="#3f3f40"
                        android:textSize="20dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="15dp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/idPunto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="30.0"
                        android:textSize="18dp"
                        android:textColor="#3f3f40"
                        android:layout_marginTop="1dp"
                        android:layout_marginLeft="15dp"
                        android:textStyle="bold"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SubTotal: "
                        android:textColor="#3f3f40"
                        android:textSize="20dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="15dp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/idSubTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1910.00 "
                        android:textSize="18dp"
                        android:textColor="#3f3f40"
                        android:layout_marginTop="1dp"
                        android:layout_marginLeft="15dp"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Acabado: "
                        android:textColor="#3f3f40"
                        android:textSize="20dp"

                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="15dp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/idSubAcabadoE"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1910.00 "
                        android:textSize="18dp"
                        android:textColor="#3f3f40"
                        android:layout_marginTop="1dp"
                        android:layout_marginLeft="15dp"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:id="@+id/idOrden"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:text="Color:"
                        android:textSize="20dp"
                        android:textColor="#f4f4f3"
                        android:background="#f4f4f3"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="15dp"
                        android:textStyle="bold"
                        />

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="Marca:"
                    android:textColor="#3f3f40"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/idMarca"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GEOX"
                    android:textSize="18dp"
                    android:textColor="#3f3f40"
                    android:layout_marginTop="1dp"
                    android:layout_marginLeft="15dp"
                    android:textStyle="bold"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cant:"
                        android:textSize="20dp"
                        android:textColor="#3f3f40"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="15dp"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:id="@+id/idCantidad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12"
                        android:textSize="18dp"
                        android:textColor="#3f3f40"
                        android:layout_marginTop="1dp"
                        android:layout_marginLeft="15dp"
                        android:textStyle="bold"
                        />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:text="Total:"
                        android:textColor="#3f3f40"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="15dp"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:id="@+id/idTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12"
                        android:textSize="18dp"
                        android:textColor="#3f3f40"
                        android:layout_marginTop="1dp"
                        android:layout_marginLeft="15dp"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:id="@+id/idCorrida"
                        android:layout_width="1dp"
                        android:layout_height="1dp"
                        android:text="12"
                        android:textSize="18dp"
                        android:textColor="#ffffff"
                        android:layout_marginTop="1dp"
                        android:layout_marginLeft="15dp"
                        android:textStyle="bold"
                        />


                </LinearLayout>
                <TextView
                    android:id="@+id/id"
                    android:layout_width="1dp"
                    android:layout_height="1dp"
                    android:text="Color:"

                    android:textSize="20dp"
                    android:textColor="#004d73"

                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/idBar"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:text="Color:"
                    android:textSize="20dp"
                    android:textColor="#f4f4f3"
                    android:background="#f4f4f3"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    android:textStyle="bold"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Color:"
                    android:textSize="20dp"
                    android:textColor="#3f3f40"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/idColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GEOX NAVY"
                    android:textSize="18dp"
                    android:textColor="#3f3f40"
                    android:layout_marginTop="1dp"
                    android:layout_marginLeft="15dp"
                    android:textStyle="bold"
                    />

                <Button
                    android:id="@+id/idFoto"
                    android:layout_width="150dp"
                    android:layout_marginTop="10dp"
                    android:layout_height="55dp"
                    android:textSize="25dp"
                    android:background="@drawable/btn_buscar"
                    android:layout_marginLeft="10dp"
                    android:text="FOTO"
                    android:textColor="#ffff"
                    />
                <Button
                    android:id="@+id/idEditar"
                    android:layout_width="150dp"
                    android:layout_height="55dp"
                    android:textColor="#ffff"
                    android:textSize="25dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/btn_buscar"
                    android:layout_marginLeft="10dp"
                    android:text="EDITAR"
                    />
                <Button
                    android:id="@+id/idEliminar"
                    android:layout_width="150dp"
                    android:textColor="#fff"
                    android:background="@drawable/btn_buscar"
                    android:layout_height="55dp"
                    android:textSize="25dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:text="ELIMINAR"
                    />
                <TextView
                    android:id="@+id/idImagen"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:text="Color:"
                    android:textColor="#f4f4f3"
                    android:textSize="20dp"
                    android:background="#f4f4f3"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    android:textStyle="bold"
                    />
            </LinearLayout>



        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginTop="5dp"
            android:background="#ffffff"
            />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>