<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment2"
    android:layout_width="match_parent"
    android:layout_height="1000dp"
    tools:context=".ConsultaF">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f4f4f3"
        android:orientation="vertical">


        <Button
            android:id="@+id/btnBarCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn_buscar"
            android:text="Escanear"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="20dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#f4f4f3"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:text="Estilo"

                android:textColor="#3f3f40"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120dp"
                android:text="Color"
                android:textColor="#3f3f40"
                android:textSize="20dp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



            <EditText
                android:id="@+id/sp2"
                android:layout_width="185dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp"
                android:background="#e2e2de"
                android:inputType="textCapCharacters"
                android:hint="Estilo"
                android:textColor="#3f3f40"
                android:textSize="25dp"


                />

            <Spinner
                android:id="@+id/sp"
                style="@style/spinner_style"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:clickable="true" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f4f4f3"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Acabado"
                android:textColor="#3f3f40"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="110dp"

                android:text="Marca"
                android:textColor="#3f3f40"
                android:textSize="20dp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f4f4f3"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/sp3"
                style="@style/spinner_style"
                android:layout_width="180dp"
                android:layout_height="wrap_content" />


            <Spinner
                android:id="@+id/sp4"
                style="@style/spinner_style"
                android:layout_width="205dp"

                android:layout_height="wrap_content"></Spinner>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Corrida"
                android:textColor="#3f3f40"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/sp5"
                style="@style/spinner_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#f4f4f3"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:text="Selecciona un punto"
                android:textColor="#3f3f40"
                android:textSize="30dp" />

            <Spinner
                android:id="@+id/punto"
                style="@style/spinner_style"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                ></Spinner>

            <TextView
                android:layout_width="1000dp"
                android:layout_height="5dp"
                android:layout_marginTop="10dp"
                android:background="#f4f4f3" />
            <Button
                android:id="@+id/btnDetalle"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@drawable/btn_buscar"
                android:text="Imagen del producto"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="20dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:orientation="vertical"
                >
                <EditText
                    android:id="@+id/clienteTXT"
                    android:layout_width="match_parent"
                    android:hint="Nombre del Cliente"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:layout_marginTop="10dp"
                    android:layout_height="30dp"
                    android:background="#93938e"
                    />




                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/idPedido"
                    />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f4f4f3"
                android:orientation="horizontal"
                >
                <TextView

                    android:textColor="#3f3f40"
                    android:textSize="17dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="40dp"
                    android:text="Unidades:"

                    />
                <TextView
                    android:id="@+id/unidadesTXT"
                    android:textColor="#3f3f40"
                    android:textSize="17dp"
                    android:layout_marginLeft="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0"

                    />
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#3f3f40"
                    android:textSize="17dp"
                    android:layout_marginLeft="25dp"
                    android:text="total:"
                    />
                <TextView
                    android:id="@+id/importeTXT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/pesos"
                    android:text="0"
                    android:textSize="17dp"
                    android:layout_marginLeft="0dp"
                    android:layout_weight="1"
                    android:textColor="#3f3f40"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:background="#f4f4f3"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="2dp"
                    android:text="Existencia"
                    android:textColor="#3f3f40"
                    android:textSize="20dp" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="18dp"
                    android:text="Precio"
                    android:textColor="#3f3f40"
                    android:textSize="20dp" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="28dp"
                    android:text="Descuento"
                    android:textColor="#3f3f40"
                    android:textSize="20dp" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="23dp"
                    android:text="Total"
                    android:textColor="#3f3f40"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#f4f4f3"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/existenciasTXT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="40dp"
                    android:text=""
                    android:textColor="#ff0000"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/precioTXT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="43dp"
                    android:text=""
                    android:textColor="#3f3f40"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/descuentoTXT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="28dp"
                    android:text=""
                    android:textColor="#f93f3f40"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/totalTXT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="23dp"
                    android:text=""
                    android:textColor="#3f3f40"
                    android:textSize="20dp"
                    android:textStyle="bold" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"

                    >


                </LinearLayout>


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="#f4f4f3"
                android:gravity="center"
                android:textColor="#3f3f40"
                android:textSize="25dp"
                />
        </LinearLayout>









        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/btnMas"

                android:layout_width="60dp"
                android:layout_height="60dp"
                android:textSize="30dp"
                android:textColor="#ffffff"
                android:background="@drawable/btn_buscar"
                android:layout_marginLeft="10dp"
                android:text="+"/>
            <TextView
                android:id="@+id/cantidadTXT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="0"
                android:layout_marginLeft="7dp"
                android:textColor="#ff0000"
                android:textSize="20dp"
                android:textStyle="bold" />
            <Button
                android:id="@+id/btnMenos"
                android:layout_width="60dp"
                android:layout_marginLeft="7dp"
                android:textColor="#ffffff"
                android:background="@drawable/btn_buscar"
                android:layout_height="60dp"
                android:textSize="30dp"
                android:textStyle="bold"
                android:text="-"/>
            <Button
                android:id="@+id/btnAgregar"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginLeft="12dp"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="20dp"
                android:background="@drawable/btn_buscar"
                android:text="AGREGAR" />


        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="7dp"
                android:layout_gravity="center"
                android:background="#ffffff" />
        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">


            <Button
                android:id="@+id/btnOtras"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:background="@drawable/btn_buscar"
                android:gravity="center"
                android:text="Ver en otras tiendas"
                android:textAllCaps="false"
                android:textColor="#f4f4f3"
                android:textSize="20dp"
                />

            <Button
                android:id="@+id/btnSimilares"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/btn_buscar"
                android:gravity="center"
                android:text="Ver similares"
                android:textAllCaps="false"
                android:textColor="#f4f4f3"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center">

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">



                <Button
                    android:id="@+id/btnResumen"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:textStyle="bold"
                    android:textColor="#f4f4f3"
                    android:textSize="20dp"
                    android:layout_marginTop="10dp"
                    android:text="Ver resumen"
                    android:background="@drawable/btn_buscar"
                    />

            </LinearLayout>

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                android:layout_gravity="center">




                <Button
                    android:id="@+id/btnFinalizar"
                    android:layout_width="150dp"
                    android:layout_marginTop="10dp"
                    android:layout_height="50dp"
                    android:text="Guardar"
                    android:textColor="#f4f4f3"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:background="@drawable/btn_buscar"
                    />

            </LinearLayout>


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            />

    </LinearLayout>


    </ScrollView>

</FrameLayout>