<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f3"
    >


    <LinearLayout
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/idTiendaZona"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="qwertyuio"
            android:textColor="#f4f4f3"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/idZona"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:gravity="center"
            android:text="qwertyuio"
            android:textColor="#004d73"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Nombre de Zona:"
                android:layout_marginLeft="20dp"
                android:textColor="#3f3f40"
                android:textSize="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ãrea Asignada:"
                android:textColor="#3f3f40"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
        <TextView
            android:id="@+id/NombreZona"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Ejemplo 1"
            android:textColor="#3f3f40"
            android:textSize="20dp" />

            <TextView
                android:id="@+id/NombreArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="Ejemplo 1"
                android:textColor="#3f3f40"
                android:textSize="20dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/idAreaZona"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:gravity="center"
            android:text="qwertyuio"
            android:textColor="#004d73"
            android:textSize="20dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:gravity="center"
            >

            <Button
                android:id="@+id/editarZona"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Editar"

                android:textColor="#ffff"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_buscar"
                />

            <TextView
                android:layout_width="10dp"
                android:layout_height="1dp" />
            <Button
                android:id="@+id/eliminarZona"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="#ffff"
                android:text="ELiminar"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_buscar"
                />


        </LinearLayout>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginTop="5dp"
            android:background="#004d73" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>