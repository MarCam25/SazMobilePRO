<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d6d9da"
    >

    <LinearLayout
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#f4f4f3"
        >

        <TextView
            android:id="@+id/idTienda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="qwertyuio"
            android:textColor="#f4f4f3"
            android:textSize="20dp"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre de Área:"
            android:textColor="#3f3f40"
            android:layout_marginLeft="10dp"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/NombreArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Ejemplo 1"
            android:textColor="#3f3f40"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/idArea"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:gravity="center"
            android:text="qwertyuio"
            android:textColor="#004d73"
            android:textSize="20dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <Button
            android:id="@+id/eliminarArea"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
           android:textSize="20dp"
            android:layout_marginTop="5dp"
            android:textColor="#ffff"
            android:text="ELiminar"
            android:background="@drawable/btn_buscar"
            />

        <TextView
            android:layout_width="10dp"
            android:layout_height="1dp" />

        <Button
            android:id="@+id/editarArea"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
           android:textSize="20dp"
            android:textColor="#ffff"
            android:layout_marginTop="5dp"
            android:background="@drawable/btn_buscar"
            android:text="Editar" />

    </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginTop="5dp"
            android:background="#004d73" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>